---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.svelte';
---

<BaseLayout title="Welcome to GamBlick">
  <main>
    <h1>Welcome to GamBlick!</h1>
    <div style="display: flex; flex-direction: column; gap: 10px;">
      <Button client:load variant="default">Default Button</Button>
      <Button client:load variant="destructive">Destructive Button</Button>
      <Button client:load variant="outline">Outline Button</Button>
      <Button client:load variant="secondary">Secondary Button</Button>
      <Button client:load variant="ghost">Ghost Button</Button>
      <Button client:load variant="link">Link Button</Button>
      <Button client:load size="sm">Small Button</Button>
      <Button client:load size="lg">Large Button</Button>
      <Button client:load size="icon">Icon Button</Button>
    </div>
    <div style="margin-top: 20px;">
      <h2>Counter Button:</h2>
      <Button client:load>Click to count:</Button>
    </div>
  </main>
</BaseLayout>
