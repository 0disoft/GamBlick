{
  // 저장할 때마다 Prettier가 자동으로 코드 서식을 정리합니다.
  "editor.formatOnSave": true,
  // 대부분의 파일 유형에 대해 Prettier를 기본 포맷터로 설정합니다.
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Astro 파일에 대해서는 Astro 확장 프로그램의 포맷터를 사용하도록 설정합니다.
  // (이 포맷터는 내부적으로 Prettier를 사용하므로 일관성이 유지됩니다.)
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  }
}